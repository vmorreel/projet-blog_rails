
=form_for [@user,@post] do |f|
    = f.label 'Title:'
    = f.text_field :title,:required => true
    <br>
    = f.label 'Lead paragraph:'
    = f.text_field :lead_paragraph,:required => true
    <br>
    = f.label 'Content:'
    = f.text_field :content,:required => true
    <br>
    - if @post.thumbnail.url.present?
        = image_tag @post.thumbnail.thumb.url

    = f.label 'Thumbnail:'
    = f.file_field :thumbnail
    
    = f.hidden_field :user_id, value: @user.id
    <br>
    <br>
    =f.submit "Validate", class: "btn"

